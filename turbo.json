{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    "turbo.json",
    "package.json",
    "tsconfig.json"
  ],
  "concurrency": "15",
  "tasks": {
    "build": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "build/**",
        ".vercel/**",
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "docker": {
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^build"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "@replyguy/worker#dev": {
      "dependsOn": [
        "@replyguy/neynar#build",
        "@replyguy/core#build",
        "@replyguy/db#build",
        "@replyguy/queue#build",
        "@replyguy/ai_service#build",
        "@replyguy/user#build"
      ],
      "cache": false,
      "persistent": true
    },
    "@replyguy/ingestion#dev": {
      "dependsOn": [
        "@replyguy/neynar#build",
        "@replyguy/core#build",
        "@replyguy/db#build",
        "@replyguy/queue#build",
        "@replyguy/user#build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}