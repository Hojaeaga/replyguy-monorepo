{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Library",
    "extends": "./base.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "noEmit": false,
        "outDir": "dist",
        "rootDir": "src",
        "incremental": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules"
    ]
}