{
    "name": "@replyguy/core",
    "version": "0.1.0",
    "private": true,
    "description": "Core utilities, types, and logging for ReplyGuy",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc -p tsconfig.build.json --noEmit false",
        "dev": "tsc -p tsconfig.build.json --watch --noEmit false",
        "check-types": "tsc --noEmit",
        "lint": "eslint src/",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "pino": "^8.16.0",
        "pino-pretty": "^10.2.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@replyguy/config": "workspace:*",
        "eslint": "^9.28.0",
        "typescript": "^5.2.2"
    }
}